<UserControl x:Class="SkyrimHomeCalculator.View.MaterialsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:SkyrimHomeCalculator.View">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0"  Header="Raw Materials">
            <view:MaterialListView DataContext="{Binding RawMaterialList}" />
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Base Materials">
            <view:MaterialListView DataContext="{Binding BaseMaterialList}" />
        </GroupBox>
    </Grid>
</UserControl>
